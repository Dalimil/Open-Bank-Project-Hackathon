extends layout

block scripts
  script.
    // Inject js variable
    var isFirstVisit= #{isFirstVisit}
  script(src='/static/js/home.js')
  script(src="/static/js/googleMaps.js")

block content
  // NavBar
  <nav class="deep-orange darken-1" role="navigation">
    <div class="nav-wrapper container">
    <a id="logo-container" href="#" class="brand-logo">Lean Bill</a>
      <ul id="nav-mobile" class="side-nav">
        <li><img src="/static/img/logo.png" width="100%" style="margin-bottom: -1em;"></li>
        <li><a href="/"><i class="material-icons">room</i>Places</a></li>
        <li><a href="/account"><i class="material-icons">perm_identity</i>Account</a></li>
        <li><a href="/account"><i class="material-icons">credit_card</i>Payment Methods</a></li>
        <li><a href="#"><i class="material-icons">star</i>Rewards</a></li>
        <li><a href="#"><i class="material-icons">supervisor_account</i>Invite Friends</a></li>
        <li><a href="#"><i class="material-icons">settings</i>Settings</a></li>
      </ul>
      <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
  </nav>

  // Slider
  <div class="slider">
    <ul class="slides">
      <li>
        <img src="/static/img/cards.jpg">
        <div class="caption center-align">
          <h3>Connect to your bank account</h3>
        </div>
      </li>
      <li>
        <img src="/static/img/restaurant.jpg">
        <div class="caption center-align">
          <h3>Find places<br>near you</h3>
          <h5 class="light grey-text text-lighten-3">Explore the area</h5>
        </div>
      </li>
      <li>
        <img src="/static/img/food.jpg">
        <div class="caption center-align">
          <h3>Order with<br> a single click</h3>
          <h5 class="light grey-text text-lighten-3">Enjoy your meal!</h5><br><br>
          <a id="finish-intro" class="waves-effect waves-light btn">Start</a>
        </div>
      </li>
    </ul>
  </div>

  // ------------- MAP COMES HERE ----------------
  
  <div id="map"></div>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD6Wc8NBAlFXo9Bg21ECO5VCVdBSo2R1Rw&callback=initMap" async defer></script>

 
  // ------------- LIST OF RESTAURANTS -------------
  <div id="restaurant-list">
    <ul class="collection">
      <li class="collection-item avatar">

        <a href="/restaurant/galvin">
          <img src="/static/img/r1.jpg" alt="" class="circle">
          <span class="title">Galvin La Chapelle</span>
          <p>Open until 15:00<br>London's Best for Business Dining
          </p>
          <a href="#!" class="secondary-content"><i class="material-icons">grade</i><i class="material-icons">grade</i></a>
        </a>
      </li>
      <li class="collection-item avatar">
        <a href="/restaurant/hawk">
          <img src="/static/img/r2.jpg" alt="" class="circle">
          <span class="title">Hawksmoor Spitalfields</span>
          <p>Open until 21:00<br>London's Best Steakhouses</p>
          <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
        </a>
      </li>
      <li class="collection-item avatar">
        <a href="/restaurant/nightlyBurger">
          <img src="/static/img/r4.jpg" alt="" class="circle">
          <span class="title">NightlyBurger</span>
          <p>Open until 22:00<br>Best burgers in town</p>
          <a href="#!" class="secondary-content"><i class="material-icons">grade</i><i class="material-icons">grade</i><i class="material-icons">grade</i></a>
        </a>
      </li>
      <li class="collection-item avatar">
        <a href="/restaurant/nana">
          <img src="/static/img/r3.jpg" alt="" class="circle">
          <span class="title">Dishoom</span>
          <p>Open until 18:00<br>Indian menu</p>
          <a href="#!" class="secondary-content"><i class="material-icons">grade</i><i class="material-icons">grade</i></a>
        </a>
      </li>
    </ul>
  </div>
       